{% import 'trex.jinja2' as trex with context %}
<!DOCTYPE html>
<html class="{{ ' '.join(html_classes) }}" id="{{ html_id }}" data-csrf-token="{{ csrf_token() }}">
    <head>
        <meta charset="utf-8">
        <title>{% if page_title %}{{ page_title }} | {% endif %}Realview</title>
        <link rel="stylesheet" href="{{ cdn('less/app.css') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="{{ url_for('index.index') }}">App brand</a>
                    <div>
                        <ul class="nav">
                            {{ trex.bootstrap_nav_item('index.index', 'Home') }}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            {%- with messages = get_flashed_messages(with_categories=True) %}
                {%- if messages %}
                    {%- for (category, message) in messages %}
                        <div class="flash alert alert-{{ category == 'message' and 'info' or category }}">
                            {{ message }}
                        </div>
                    {%- endfor %}
                {%- endif %}
            {%- endwith %}
            {% block content %}{% endblock %}
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
        <script src="{{ cdn('less/bootstrap/js/bootstrap-button.js') }}"></script>
